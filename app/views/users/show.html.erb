<div class="bg-light p-5">
  <div class="contents-container mt-0">
    <%= render "shared/content_icon", user: @user %>
    <div class="content-inner">
      <label class="form-label w-25">ユーザー名</label>
      <p class="w-75"><%= @user.name %></p>
    </div>
    <div class="content-inner">
      <label class="form-label w-25">自己紹介</label>
      <p class="w-75"><%= @user.introduction %></p>
    </div>
  </div>

  <div class="room-index-container">
    <div class="row">
      <h4 class="col-12 p-0">このユーザーが登録したルーム： <%= @user.rooms.count %>件</h4>
      <% @user.rooms.each do |room| %>
        <%= render "shared/rooms_index_content", room: room %>
      <% end %>
    </div>
  </div>
</div>
