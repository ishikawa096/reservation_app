<%= link_to room, class: 'link' do %>
  <div class="card col-lg-3 col-sm-5 m-3 p-0 room-index-card">
    <%= image_tag room.image, alt: 'ルーム画像', class: 'card-img-top index-room-img' %>
    <div class="card-body room-index-card-body">
      <h5 class="card-title"><%= link_to "#{room.name.truncate(16)}", room %></h5>
      <p class="card-text"><%= room.address.truncate(16) %></p>
      <p class="index-rate"><%= room.rate.to_s(:currency, unit: "￥", format: "%u%n") %> /日</p>
    </div>
  </div>
<% end %>
